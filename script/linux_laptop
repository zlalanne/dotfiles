#!/usr/bin/env bash
#
# Setup for a Linux laptop. Currently a Lenovo ThinkPad X1 Carbon 2015

# Remove old files
rm -rf ~/.zshrc

# Link dotfiles
stow -t ~/ atom
stow -t ~/ bin
stow -t ~/ compton
stow -t ~/ git
stow -t ~/ gtk
stow -t ~/ i3
stow -t ~/ tmux
stow -t ~/ urxvt
stow -t ~/ vim
stow -t ~/ zsh

# Run installation
cd playbook
ansible-playbook -i hosts linux_laptop.yml
