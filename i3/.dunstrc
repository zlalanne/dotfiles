# vim:ft=cfg

[global]
  font = "System San Francisco Display 14"
  allow_markup = yes

  # The format of the message. Possible variables are:
  #   %a  appname
  #   %s  summary
  #   %b  body
  #   %i  iconname (including its path)
  #   %I  iconname (without its path)
  #   %p  progress value if set ([  0%] to [100%]) or nothing
  format = "<b>%s</b>\n%p %b "

  # The frequency with wich text that is longer than the notification
  # window allows bounces back and forth.
  # This option conflicts with 'word_wrap'.
  # Set to 0 to disable
  bounce_freq = 0

  geometry = "300x20-8+32"

  shrink = no
  word_wrap = yes
  transparency = 10
  monitor = 0

  # Display notification on focused monitor
  follow = mouse

  # Draw a line of 'separatpr_height' pixel height between two notifications.
  separator_height = 3

  padding = 10
  horizontal_padding = 12
[frame]
    width = 3
    color = "#859900"

[urgency_low]
  background = "#073642"
  foreground = "#93a1a1"
  timeout = 10

[urgency_normal]
  background = "#657b83"
  foreground = "#fdf6e3"
  timeout = 10

[urgency_critical]
  background = "#d33682"
  foreground = "#fdf6e3"
  timeout = 0

[shortcuts]
  close = mod4+n
  history = mod4+shift+n
